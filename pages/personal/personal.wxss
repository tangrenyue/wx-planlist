.page-personal {
  height: 100%
}

.page-personal .module-lists {
  position: relative;
  margin-top: 20rpx;
  box-sizing: border-box
}

.page-personal .module-lists::before,
.page-personal .module-lists::after {
  content: '';
  display: block;
  position: absolute;
  left: 0;
  width: 100%;
  height: 2rpx;
  background: #CBCACB
}

.page-personal .module-lists::before {
  top: 0;
  -webkit-transform: scale(1, .5) translateY(-50%);
  transform: scale(1, .5) translateY(-50%)
}

.page-personal .module-lists::after {
  bottom: 0;
  -webkit-transform: scale(1, .5) translateY(50%);
  transform: scale(1, .5) translateY(50%)
}

.page-personal .module-lists .module {
  position: relative;
  height: 110rpx;
  padding: 0 40rpx;
  box-sizing: border-box;
  background: #FFF;
  display: -webkit-box;
  display: flex;
  -webkit-box-pack: justify;
  justify-content: space-between;
  -webkit-box-align: center;
  align-items: center;
  font-size: 34rpx;
  -webkit-transition: background .1s;
  transition: background .1s
}

.page-personal .module-lists .module.hover {
  background: #DDD
}

.page-personal .module-lists .module::after {
  content: '';
  display: block;
  position: absolute;
  bottom: 0;
  right: 0;
  left: 30rpx;
  height: 2rpx;
  -webkit-transform: scale(1, .5) translateY(50%);
  transform: scale(1, .5) translateY(50%);
  background: #CBCACB
}

.page-personal .module-lists .module:last-child::after {
  display: none
}

.page-personal .module-lists .module.main-icon {
  padding-left: 110rpx
}

.page-personal .module-lists .module.main-icon::after {
  left: 110rpx
}

.page-personal .module-lists .module.more-icon {
  padding-right: 90rpx
}

.page-personal .module-lists .module .list-icon,
.page-personal .module-lists .module .more-icon {
  display: -webkit-box;
  display: flex;
  -webkit-box-pack: center;
  justify-content: center;
  -webkit-box-align: center;
  align-items: center
}

.page-personal .module-lists .module .list-icon {
  position: absolute;
  left: 0;
  top: 0;
  width: 110rpx;
  height: 110rpx
}

.page-personal .module-lists .module .list-icon .icon-cnode {
  font-size: 40rpx;
  font-weight: 700
}

.page-personal .module-lists .module .more-icon {
  position: absolute;
  right: 0;
  top: 0;
  width: 90rpx;
  height: 110rpx
}

.page-personal .module-lists .module .more-icon .icon-cnode {
  font-size: 30rpx;
  color: #bfbfbf
}

.page-personal .module-lists .module .main-text {
  font-weight: 400
}

.page-personal .module-lists .module .sub-text {
  font-weight: 400;
  color: #999
}

.page-personal .module-lists {
  color: #333
}

.page-personal .module-lists .btn-feedback {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 9;
  opacity: 0
}