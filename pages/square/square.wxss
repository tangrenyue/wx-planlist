.page-list {
  width: 750rpx;
  min-height: 100%;
  overflow: hidden
}

.page-list .no-data {
  display: -webkit-box;
  display: flex;
  -webkit-box-pack: center;
  justify-content: center;
  -webkit-box-align: center;
  align-items: center;
  padding: 20rpx;
  color: #666;
  font-size: 28rpx
}

.reply-content {
  font-weight: 400;
  background: #fff
}

.reply-content .reply-item {
  border-bottom: 1px solid #eee;
  position: relative;
  min-height: 180rpx;
  width: 100%;
  padding: 20rpx 30rpx 20rpx 130rpx
}

.reply-item .avatar,
.reply-item .time-pannel {
  display: block;
  width: 90rpx;
  height: 120rpx;
  position: absolute;
  left: 20rpx;
  top: 30rpx;
  border-radius: 8rpx;
  box-sizing: border-box
}

.reply-item .avatar:after,
.reply-item .time-pannel:after {
  content: '';
  display: block;
  height: 1px;
  width: 60rpx;
  background: #ddd;
  position: absolute;
  right: 5rpx;
  top: 40rpx;
  -webkit-transform-origin: center;
  transform-origin: center;
  -webkit-transform: rotate(-45deg);
  transform: rotate(-45deg)
}

.reply-item .avatar .day,
.reply-item .time-pannel .day,
.reply-item .avatar .month,
.reply-item .time-pannel .month {
  position: absolute;
  display: block;
  width: 40rpx;
  height: 40rpx;
  display: -webkit-box;
  display: flex;
  -webkit-box-pack: center;
  justify-content: center;
  -webkit-box-align: center;
  align-items: center
}

.reply-item .avatar .day,
.reply-item .time-pannel .day {
  width: 50rpx;
  left: 0;
  top: 0;
  font-size: 42rpx
}

.reply-item .avatar .month,
.reply-item .time-pannel .month {
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  flex-direction: column;
  height: auto;
  right: 0;
  bottom: 0;
  font-size: 28rpx;
  color: #999;
  font-weight: 500
}

.reply-item .reply-inner .loginname {
  font-weight: 700;
  color: #535A79
}

.reply-item .reply-inner .content-text {
  padding: 10rpx 0 16rpx;
  font-weight: 700
}

.reply-item .reply-inner .content-image {
  margin-bottom: 10rpx;
  width: 560rpx;
  background: url('http://po12xl7wd.bkt.clouddn.com/load-error.jpg') center / auto 100% no-repeat
}

.reply-item .reply-inner .content-image image {
  display: block;
  width: 560rpx
}

.reply-item .reply-inner .reply-time {
  padding-top: 10rpx;
  font-weight: 700;
  color: #999;
  font-size: 28rpx
}